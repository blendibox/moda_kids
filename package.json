    "build-sitemap": "npx next-sitemap --config next-sitemap.config.cjs",
    "dev": "next dev --turbopack",
    "split:xml": "node scripts/splitXml.js data/DAFITI.xml",
    "prod": "serve out",
    "build": "npm run build-xml-to-json && npm run build-slugs && npm run categorias && next build && npm run build:all && npm run merge:all   && npm run build-sitemap && npm run build-feed",
