    "sitemap": "^8.0.0",
    "slugify": "^1.6.6",
    "uuid": "^11.1.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "next-sitemap": "^4.2.3",
    "tailwindcss": "^4"
