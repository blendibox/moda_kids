    "build:dafiti2": "node scripts/buildLotes.js dafiti2",
    "build:dafiti3": "node scripts/buildLotes.js dafiti3",
    "build:dafiti4": "node scripts/buildLotes.js dafiti4",
    "build:lego": "node scripts/buildLotes.js lego",
    "build:voucher": "node scripts/buildLotes.js voucher",
    "merge:dafiti1": "node scripts/mesclarOutros.js dafiti1",
    "merge:dafiti2": "node scripts/mesclarOutros.js dafiti2",
    "merge:dafiti3": "node scripts/mesclarOutros.js dafiti3",
    "merge:dafiti4": "node scripts/mesclarOutros.js dafiti4",
    "merge:lego": "node scripts/mesclarOutros.js lego",
    "merge:voucher": "node scripts/mesclarOutros.js voucher",
    "build:all": "npm run build:dafiti1 && npm run build:dafiti2 npm run build:dafiti3 npm run build:dafiti4 && npm run build:lego && npm run build:voucher",
    "merge:all": "npm run merge:dafiti1 && npm run merge:dafiti2 npm run merge:dafiti3 npm run merge:dafiti4 && npm run merge:lego && npm run merge:voucher",
